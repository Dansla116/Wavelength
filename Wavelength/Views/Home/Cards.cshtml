@model List<Card>
@using Wavelength.BLL.BusinessModels
@using Newtonsoft.Json

@{
    ViewBag.Title = "Cards";
    System.Web.Script.Serialization.JavaScriptSerializer serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
}

<script>
    var Model = @Html.Raw(JsonConvert.SerializeObject(Model));
</script>

@Scripts.Render("~/Scripts/Home/Cards.js")

<body ng-app="Wavelength" ng-controller="ViewCards">
    <h2>Cards</h2>

    <table>
        <thead>
            <tr>
                <th>Left</th>
                <th>Right</th>
                <th>Advanced?</th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input id="focus" type="text" ng-model="data.CreateModel.Left"/>
                </td>
                <td>
                    <input type="text" ng-model="data.CreateModel.Right"/>
                </td>
                <td>
                    <input type="checkbox" ng-model="data.CreateModel.Advanced"/>
                </td>
                <td>
                    <i class="fa fa-plus fa-2x" ng-click="Create()"></i>
                </td>
            </tr>
            <tr ng-repeat="c in data.Cards"
                id="card{{c.id}}" class="data-header">
                <td>{{c.Left}}</td>
                <td>{{c.Right}}</td>
                <td ng-if="c.Advanced">Yes</td>
                <td ng-if="!c.Advanced">No</td>
                <td class="action"><i class="fa fa-shield-alt"></i></td>
                <td class="action"><i class="fa fa-pencil-alt"></i></td>
                <td class="action" ng-click="Delete(c.id)"><i class="fa fa-close"></i></td>
            </tr>
        </tbody>
    </table>

</body>